{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[P1] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src/threads"
            }
        },
        {
            "label": "[P2] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src/userprog"
            }
        },
        {
            "label": "[P1] Run Test in GDB mode",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[P1] compile"
            ],
            "command": "pintos -v -k -T 60 --bochs --gdb  -- -q  run ${input:test_name}",
            "options": {
                "cwd": "${workspaceFolder}/src/threads/build"
            }
        },
        {
            "label": "[P2] Run Test in GDB mode with args",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[P2] compile",
                "[P2] user symbol generate for gdb"
            ],
            "command": "pintos -v -k -T 60 --qemu --gdb --filesys-size=2 -p tests/userprog/${input:prog_name} -a ${input:prog_name} -- -q  -f run '${input:args}'",
            "options": {
                "cwd": "${workspaceFolder}/src/userprog/build"
            }
        },
        {
            "label": "[P2] Run Test in GDB mode",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[P2] compile",
                "[P2] user symbol generate for gdb"
            ],
            "command": "pintos -v -k -T 60 --qemu --gdb --filesys-size=2 -p tests/userprog/${input:prog_name} -a ${input:prog_name} -p ../../tests/userprog/sample.txt -a sample.txt  -p tests/userprog/child-args -a child-args -p tests/userprog/child-simple -a child-simple -p tests/userprog/child-bad -a child-bad -p tests/userprog/child-close -a child-close -p tests/userprog/child-rox -a child-rox -p tests/filesys/base/child-syn-read -a child-syn-read -- -q  -f run '${input:prog_name}'",
            "options": {
                "cwd": "${workspaceFolder}/src/userprog/build"
            }
        },
        {
            "label": "[P2] user symbol generate for gdb",
            "type": "shell",
            "command": "objdump -h tests/userprog/${input:prog_name} | awk '/.text/ { print \"add-symbol-file ${workspaceFolder}/src/userprog/build/tests/userprog/${input:prog_name} 0x\"$4 }' > .loadsymbols",
            "options": {
                "cwd": "${workspaceFolder}/src/userprog/build"
            }
        },
        {
            "label": "[P3] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src/vm"
            }
        },
        {
            "label": "[P4] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/src/filesys"
            }
        },
        {
            "label": "[P2] Run exec-arg",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[P2] compile"
            ],
            "command": "pintos -v -k -T 60 --gdb --filesys-size=2 -p tests/userprog/exec-arg -a exec-arg -p tests/userprog/child-args -a child-args -- -q  -f run exec-arg",
            "options": {
                "cwd": "${workspaceFolder}/src/userprog/build"
            }
        },
        {
            "label": "[P3] Run child-linear",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[P3] compile"
            ],
            "command": "pintos -v -k -T 60 --gdb --filesys-size=2 -p tests/vm/page-parallel -a page-parallel -p tests/vm/child-linear -a child-linear --swap-size=4 -- -q  -f run page-parallel",
            "options": {
                "cwd": "${workspaceFolder}/src/vm/build"
            }
        }
    ],
    "inputs": [
        {
            "id": "test_name",
            "type": "pickString",
            "description": "Name of the program containing the symbols",
            "options": [
                "alarm-single",
                "alarm-multiple",
                "alarm-simultaneous",
                "alarm-priority",
                "alarm-zero",
                "alarm-negative",
                "priority-change",
                "priority-donate-one",
                "priority-donate-multiple",
                "priority-donate-multiple2",
                "priority-donate-nest",
                "priority-donate-sema",
                "priority-donate-lower",
                "priority-donate-chain",
                "priority-fifo",
                "priority-preempt",
                "priority-sema",
                "priority-condvar",
                "mlfqs-load-1",
                "mlfqs-load-60",
                "mlfqs-load-avg",
                "mlfqs-recent-1",
                "mlfqs-fair-2",
                "mlfqs-fair-20",
                "mlfqs-nice-2",
                "mlfqs-nice-10",
                "mlfqs-block",
            ]
        },
        {
            "id": "prog_name",
            "type": "pickString",
            "description": "Name of the Program to load for debugging (e.g., args-multiple)",
            "options": [
                "args-dbl-space",
                "args-many",
                "args-multiple",
                "args-none",
                "args-single",
                "bad-jump",
                "bad-jump2",
                "bad-read",
                "bad-read2",
                "bad-write",
                "bad-write2",
                "child-args",
                "child-bad",
                "child-close",
                "child-rox",
                "child-simple",
                "close-bad-fd",
                "close-normal",
                "close-stdin",
                "close-stdout",
                "close-twice",
                "create-bad-ptr",
                "create-bound",
                "create-empty",
                "create-exists",
                "create-long",
                "create-normal",
                "create-null",
                "exec-arg",
                "exec-bad-ptr",
                "exec-bound",
                "exec-bound-2",
                "exec-bound-3",
                "exec-missing",
                "exec-multiple",
                "exec-once",
                "exit",
                "halt",
                "multi-child-fd",
                "multi-recurse",
                "no-vm",
                "open-bad-ptr",
                "open-boundary",
                "open-empty",
                "open-missing",
                "open-normal",
                "open-null",
                "open-twice",
                "read-bad-fd",
                "read-bad-ptr",
                "read-boundary",
                "read-normal",
                "read-stdout",
                "read-zero",
                "rox-child",
                "rox-multichild",
                "rox-simple",
                "sc-bad-arg",
                "sc-bad-sp",
                "sc-boundary",
                "sc-boundary-2",
                "sc-boundary-3",
                "wait-bad-pid",
                "wait-killed",
                "wait-simple",
                "wait-twice",
                "write-bad-fd",
                "write-bad-ptr",
                "write-boundary",
                "write-normal",
                "write-stdin",
                "write-zero",
                "multi-oom"
            ]
        },
        {
            "id": "args",
            "type": "promptString",
            "description": "Task passed to Pintos (e.g., args-multiple some arguments for you!)",
        }
    ]
}
{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "[P1] Debug a Test",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/src/threads/build/kernel.o",
          "preLaunchTask": "[P1] Run Test in GDB mode",
          "miDebuggerServerAddress": "localhost:1234",
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/src/threads/build",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              },
          ],
          "symbolLoadInfo": {
              "loadAll": true,
              "exceptionList": ""
          }
      },
      {
          "name": "[P2] Debug a Test",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/src/userprog/build/kernel.o",
          "preLaunchTask": "[P2] Run Test in GDB mode",
          "miDebuggerServerAddress": "localhost:1234",
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/src/userprog/build",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              },
              {
                  "description": "Load user symbols",
                  "text": "source ${workspaceFolder}/src/userprog/build/.loadsymbols",
                  "ignoreFailures": false
              }
          ],
          "symbolLoadInfo": {
              "loadAll": true,
              "exceptionList": ""
          }
      },
      {
          "name": "[P3] Debug page-parallel",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/src/vm/build/kernel.o",
          "preLaunchTask": "[P3] Run child-linear",
          "miDebuggerServerAddress": "localhost:1234",
          "miDebuggerPath": "/usr/local/bin/pintos-gdb",
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/src",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              },
              {
                  "text": "loadusersymbols ${workspaceFolder}/src/vm/build/tests/vm/child-linear",
                  "description": "Import user program",
                  "ignoreFailures": false
              },
              {
                  "text": "loadusersymbols ${workspaceFolder}/src/vm/build/tests/vm/page-parallel",
                  "description": "Import user program",
                  "ignoreFailures": false
              }
          ],
          "symbolLoadInfo": {
              "loadAll": true,
              "exceptionList": ""
          }
      }
  ]
}
